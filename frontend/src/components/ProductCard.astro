---
interface productData
{
	Title: string;
	Product_ID: string;
	Price: number;
	createdAt: Date;
	updatedAt: Date;
	publishedAt: Date;
}

interface Props {
	product1: productData;
	id: number;
}

const { id, product1 } = Astro.props;
---

<div class="productCard">
	<a class="cardDetail">{product1.Title} (ID: {id})</a>
